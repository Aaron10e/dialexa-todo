{
  "semi": true,
  "singleQuote": true,
  "printWidth": 120,
  "tabWidth": 2,
  "trailingComma": "es5",
  "arrowParens": "avoid",
  "bracketSameLine": true,
  "bracketSpacing": true,
  "proseWrap": "always",
  "quoteProps": "as-needed",
  "vueIndentScriptAndStyle": false,
  "endOfLine": "lf",
  "plugins": ["prettier-plugin-sort-imports"],
  "unusedImports": true,
  "overrides": [
    {
      "files": "*.ts",
      "options": {
        "parser": "typescript",
        "tabWidth": 2,
        "singleQuote": true,
        "trailingComma": "none",
        "printWidth": 120,
        "arrowParens": "avoid",
        "proseWrap": "always",
        "quoteProps": "as-needed",
        "semi": true,
        "useTabs": false,
        "endOfLine": "lf",
        "overrides": [
          {
            "files": "*.component.ts",
            "options": {
              "printWidth": 120,
              "parser": "typescript",
              "tabWidth": 2,
              "useTabs": false,
              "endOfLine": "auto",
              "arrowParens": "always",
              "insertPragma": true,
              "jsxSingleQuote": false,
              "semi": true,
              "quoteProps": "as-needed",
              "htmlWhitespaceSensitivity": "strict",
              "vueIndentScriptAndStyle": true,
              "embeddedLanguageFormatting": "auto",
              "proseWrap": "preserve",
              "requirePragma": false,
              "rangeStart": 0,
              "emptyLifecycleMethods": true
            }
          },
          {
            "files": "*.service.ts",
            "options": {
              "printWidth": 120,
              "singleQuote": true,
              "semi": true,
              "tabWidth": 2,
              "trailingComma": "none",
              "arrowParens": "avoid",
              "proseWrap": "always",
              "quoteProps": "as-needed",
              "useTabs": false
            }
          },
          {
            "files": "*.spec.ts",
            "options": {
              "printWidth": 140,
              "singleQuote": true,
              "semi": true,
              "tabWidth": 2,
              "trailingComma": "all",
              "arrowParens": "always",
              "bracketSpacing": true,
              "proseWrap": "always",
              "quoteProps": "as-needed",
              "useTabs": false
            }
          }
        ]
      }
    },
    {
      "files": "*.html",
      "options": {
        "parser": "angular",
        "printWidth": 120,
        "tabWidth": 2,
        "semi": true,
        "useTabs": false,
        "endOfLine": "lf"
      }
    }
  ]
}
